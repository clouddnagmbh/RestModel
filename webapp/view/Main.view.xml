<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="at.clouddna.axiostest.controller.Main"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:codeeditor="sap.ui.codeeditor">
	<Page title="axios Test">
		<content>
			<Text text="https://webidetesting7978545-ed926da1b.dispatcher.eu2.hana.ondemand.com/sap/opu/odata/sap/ZHOFIO_CUSTOMER_SRV/"/>
			<VBox alignItems="Center">
				<Button text="send GET" press="onGetPress"/>
				<Button text="send POST" press="onPostPress"/>
				<Button text="send PUT" press="onPutPress"/>
				<Button text="send DELETE" press="onDeletePress"/>
				<HBox alignItems="Center">
					<Label text="x-csrf-Handling:"/>
					<Switch state="true" change="onTokenHandlingSwitch"/>
				</HBox>
			</VBox>
			<Label text="URI"/>
			<Input id="uri" placeholder="/Ressource"/>
			<Label text="Body"/>
			<codeeditor:CodeEditor id="codeeditor_body" type="json" width="100%" height="20%"/>
			<Label text="Response"/>
			<codeeditor:CodeEditor id="codeeditor_response" type="json" width="100%" height="50%"/>
			<List items="{path: 'testClientModel>/CustomerSet', parameters: {sendGet: false}}">
				<items>
					<StandardListItem title="{testClientModel>Firstname}"/>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>